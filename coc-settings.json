// vim: et ts=2 sw=2
{
  "suggest": {
    "autoTrigger": "always"
  },
  "list.normalMappings": {
    "<C-j>": "do:next",
    "<C-k>": "do:previous"
  },
  "languageserver": {
    "clangd": {
      "command": "/usr/local/opt/llvm/bin/clangd",
      "rootPatterns": [
        "WORKSPACE",
        "compile_flags.json",
        "compile_commands.json",
        ".git/",
        ".hg/"
      ],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },

    "sorbet-pay-server": {
      "command": "pay",
      "args": ["exec", "scripts/bin/typecheck", "--lsp"],
      "rootPatterns": [
        "stripe/pay-server"
      ],
      "filetypes": ["ruby"]
    }
  },
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.formatOnSaveFiletypes": [
    "rust"
  ]
}
